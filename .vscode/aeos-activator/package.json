{
  "name": "aeos-activator",
  "displayName": "AEOS Agent Activator",
  "description": "Automatically activates AEOS agents on workspace open",
  "version": "1.0.0",
  "publisher": "cmc-go",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aeos.activate",
        "title": "AEOS: Activate Agent"
      },
      {
        "command": "aeos.heartbeat",
        "title": "AEOS: Send Heartbeat"
      },
      {
        "command": "aeos.terminalStatus",
        "title": "AEOS: Check Terminal Status (Hung Detection)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
